{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "removeComments": true,
    
    "moduleResolution": "node",
    "paths": {},
    "types": [
      "node"
    ],
    "typeRoots": [
        "node_modules/@types"
      ]
    },
  "include": [
    "**/*.ts"
  ]
}